<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ks37PageSequence" parent="Ks37PreferencesPage">
    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x08</property></object></child>
            <property name="title" translatable="yes">Sync Clock In/Out Settings</property>
            <property name="subtitle" translatable="yes">Set Sync input/output type. Refer to external device documentation to determine what the settings should be.</property>
            <property name="subtitle-lines">3</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>1 Step (Gate)</item>
                  <item>1 Step (Clock)</item>
                  <item>1 Pulse (Korg)</item>
                  <item>24 ppq</item>
                  <item>48 ppq</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x0b</property></object></child>
            <property name="title" translatable="yes">Sync Clock Start</property>
            <property name="subtitle" translatable="yes">Determines which sort of signal will start KeyStep 37.</property>
            <property name="subtitle-lines">2</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>On Clock</item>
                  <item>On Gate Start</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x0c</property></object></child>
            <property name="title" translatable="yes">Next Seq</property>
            <property name="subtitle" translatable="yes">Continue</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>End</item>
                  <item>Instant Reset</item>
                  <item>Instant Continue</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x0f</property></object></child>
            <property name="title" translatable="yes">Transposition Input Port</property>
            <property name="subtitle" translatable="yes">Sequences can be transposed by external devices. This decides which ones are allowed to do so.</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item value="0x01">USB</item>
                  <item>MIDI</item>
                  <item>USB &amp; MIDI</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x09</property></object></child>
            <property name="title" translatable="yes">Transpose Input Channel</property>
            <property name="subtitle" translatable="yes">Specifies the MIDI channel to obey for transposition.</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                  <item>None</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwSwitchRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x0e</property></object></child>
            <property name="title" translatable="yes">Transposition Latch</property>
            <property name="subtitle" translatable="yes">Decides whether a sequence will only be transposed while a key is held down.</property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x13</property></object></child>
            <property name="title" translatable="yes">Transpose Center Pitch</property>
            <property name="subtitle" translatable="yes">Notes above/below center transpose the sequence up/down</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>C-2</item>
                  <item>C#-2</item>
                  <item>D-2</item>
                  <item>D#-2</item>
                  <item>E-2</item>
                  <item>F-2</item>
                  <item>F#-2</item>
                  <item>G-2</item>
                  <item>G#-2</item>
                  <item>A-2</item>
                  <item>A#-2</item>
                  <item>B-2</item>

                  <item>C-1</item>
                  <item>C#-1</item>
                  <item>D-1</item>
                  <item>D#-1</item>
                  <item>E-1</item>
                  <item>F-1</item>
                  <item>F#-1</item>
                  <item>G-1</item>
                  <item>G#-1</item>
                  <item>A-1</item>
                  <item>A#-1</item>
                  <item>B-1</item>

                  <item>C0</item>
                  <item>C#0</item>
                  <item>D0</item>
                  <item>D#0</item>
                  <item>E0</item>
                  <item>F0</item>
                  <item>F#0</item>
                  <item>G0</item>
                  <item>G#0</item>
                  <item>A0</item>
                  <item>A#0</item>
                  <item>B0</item>

                  <item>C1</item>
                  <item>C#1</item>
                  <item>D1</item>
                  <item>D#1</item>
                  <item>E1</item>
                  <item>F1</item>
                  <item>F#1</item>
                  <item>G1</item>
                  <item>G#1</item>
                  <item>A1</item>
                  <item>A#1</item>
                  <item>B1</item>

                  <item>C2</item>
                  <item>C#2</item>
                  <item>D2</item>
                  <item>D#2</item>
                  <item>E2</item>
                  <item>F2</item>
                  <item>F#2</item>
                  <item>G2</item>
                  <item>G#2</item>
                  <item>A2</item>
                  <item>A#2</item>
                  <item>B2</item>

                  <item>C3</item>
                  <item>C#3</item>
                  <item>D3</item>
                  <item>D#3</item>
                  <item>E3</item>
                  <item>F3</item>
                  <item>F#3</item>
                  <item>G3</item>
                  <item>G#3</item>
                  <item>A3</item>
                  <item>A#3</item>
                  <item>B3</item>

                  <item>C4</item>
                  <item>C#4</item>
                  <item>D4</item>
                  <item>D#4</item>
                  <item>E4</item>
                  <item>F4</item>
                  <item>F#4</item>
                  <item>G4</item>
                  <item>G#4</item>
                  <item>A4</item>
                  <item>A#4</item>
                  <item>B4</item>

                  <item>C5</item>
                  <item>C#5</item>
                  <item>D5</item>
                  <item>D#5</item>
                  <item>E5</item>
                  <item>F5</item>
                  <item>F#5</item>
                  <item>G5</item>
                  <item>G#5</item>
                  <item>A5</item>
                  <item>A#5</item>
                  <item>B5</item>

                  <item>C6</item>
                  <item>C#6</item>
                  <item>D6</item>
                  <item>D#6</item>
                  <item>E6</item>
                  <item>F6</item>
                  <item>F#6</item>
                  <item>G6</item>
                  <item>G#6</item>
                  <item>A6</item>
                  <item>A#6</item>
                  <item>B6</item>

                  <item>C7</item>
                  <item>C#7</item>
                  <item>D7</item>
                  <item>D#7</item>
                  <item>E7</item>
                  <item>F7</item>
                  <item>F#7</item>
                  <item>G7</item>
                  <item>G#7</item>
                  <item>A7</item>
                  <item>A#7</item>
                  <item>B7</item>

                  <item>C8</item>
                  <item>C#8</item>
                  <item>D8</item>
                  <item>D#8</item>
                  <item>E8</item>
                  <item>F8</item>
                  <item>F#8</item>
                  <item>G8</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x11</property></object></child>
            <property name="title" translatable="yes">Velocity</property>
            <property name="subtitle" translatable="yes">Disregard velocity or not</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>As Recorded</item>
                  <item>Fixed</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwSpinRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x12</property></object></child>
            <property name="title" translatable="yes">Fixed Velocity Value</property>
            <property name="subtitle" translatable="yes">Set the preferred value</property>
            <property name="adjustment">
              <object class="GtkAdjustment">
                <property name="lower">1</property>
                <property name="upper">127</property>
                <property name="value">50</property>
                <property name="page-increment">10</property>
                <property name="step-increment">1</property>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x0a</property></object></child>
            <property name="title" translatable="yes">Tap Tempo Average</property>
            <property name="subtitle" translatable="yes">Number of taps to respond</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item value="0x03">3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="AdwSwitchRow" id="arm_to_start">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x15</property></object></child>
            <property name="title" translatable="yes">Arm To Start</property>
            <property name="subtitle" translatable="yes">Determines the start/stop behavior of the sequencer when working with external clock sources</property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x16</property></object></child>
            <property name="title" translatable="yes">Tie Mode</property>
            <property name="subtitle" translatable="yes">Determines how notes are "tied" together in the Sequencer</property>
            <property name="subtitle-lines">2</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Tie to Previous</item>
                  <item>Tie to Next</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x17</property></object></child>
            <property name="title" translatable="yes">Sequence Length Update</property>
            <property name="subtitle" translatable="yes">Specifies behavior of sequencer when user shortens a sequence</property>
            <property name="subtitle-lines">2</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Keep beyond seq length</item>
                  <item>Clear beyond seq length</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>

