<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ks37PageController" parent="Ks37PreferencesPage">
    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x03</property></object></child>
            <property name="title" translatable="yes">User Channel</property>
            <property name="subtitle" translatable="yes">MIDI channel on which the keyboard transmits data</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x01</property></object></child>
            <property name="title" translatable="yes">MIDI Input Channel</property>
            <property name="subtitle" translatable="yes">USB/MIDI CV channel when Seq/Arp are stopped</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>1</item>
                  <item>2</item>
                  <item>3</item>
                  <item>4</item>
                  <item>5</item>
                  <item>6</item>
                  <item>7</item>
                  <item>8</item>
                  <item>9</item>
                  <item>10</item>
                  <item>11</item>
                  <item>12</item>
                  <item>13</item>
                  <item>14</item>
                  <item>15</item>
                  <item>16</item>
                  <item value="0x41">User</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwSwitchRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x02</property></object></child>
            <property name="title" translatable="yes">MIDI Thru</property>
            <property name="subtitle" translatable="yes">Patch MIDI In to Out</property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x06</property></object></child>
            <property name="title" translatable="yes">Velocity Curve</property>
            <property name="subtitle" translatable="yes">Sets velocity response type</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Log</item>
                  <item>Lin</item>
                  <item>AntiLog</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x07</property></object></child>
            <property name="title" translatable="yes">Aftertouch Curve</property>
            <property name="subtitle" translatable="yes">Sets Aftertouch response type</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Log</item>
                  <item>Lin</item>
                  <item>AntiLog</item>
                  <item>Soft</item>
                </items>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x2e</property></object></child>
            <property name="title" translatable="yes">Knob Catchup</property>
            <property name="subtitle" translatable="yes">Matches the physical knob position with the digital value it represents</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Jump</item>
                  <item>Hook</item>
                  <item>Scale</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x6f</property></object></child>
            <property name="title" translatable="yes">Hold Switch Function</property>
            <property name="subtitle" translatable="yes">Act as Sus. Pedal or not</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item value="0x01">Hold</item>
                  <item>Sustain</item>
                  <item>Both</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="midi-id">0x70</property></object></child>
            <property name="title" translatable="yes">Sustain Pedal Function</property>
            <property name="subtitle" translatable="yes">Act as Hold button or not</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item value="0x01">Hold</item>
                  <item>Sustain</item>
                  <item>Both</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>

