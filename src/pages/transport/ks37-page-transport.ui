<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="Ks37PageTransport" parent="Ks37PreferencesPage">
    <child>
      <object class="AdwPreferencesGroup">

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="control-id">0x4127</property></object></child>
            <property name="title" translatable="yes">Play / Pause</property>
            <property name="subtitle">Pause or 'stutter' sequence</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Pause</item>
                  <item>Reset</item>
                </items>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="Ks37ComboRow">
            <child><object class="Ks37MidiConnect"><property name="control-id">0x4120</property></object></child>
            <property name="title" translatable="yes">Transport Mode</property>
            <property name="model">
              <object class="Ks37ControlValueList">
                <items>
                  <item>Off</item>
                  <item>MIDI CC</item>
                  <item>MMC</item>
                  <item>Both</item>
                </items>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>

